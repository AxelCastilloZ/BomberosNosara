{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm --filter bomberos-de-nosara-backend build"
  },
  "deploy": {
    "startCommand": "pnpm --filter bomberos-de-nosara-backend start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}