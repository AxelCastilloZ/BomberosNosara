{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/bomberos-de-nosara-backend && pnpm build"
  },
  "deploy": {
    "startCommand": "cd apps/bomberos-de-nosara-backend && node dist/main.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}